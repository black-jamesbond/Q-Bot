# Application Settings
APP_NAME=AI Conversational Backend
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ai_conversations

# AI Model Settings
DEFAULT_MODEL=microsoft/DialoGPT-medium
MAX_TOKENS=512
TEMPERATURE=0.7
MODEL_CACHE_DIR=./models

# Authentication Settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Settings
REDIS_URL=redis://localhost:6379

# Logging Settings
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# MONGODB_URL=mongodb://username:password@mongodb-host:27017/ai_conversations?authSource=admin
# SECRET_KEY=generate-a-secure-random-key-for-production
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# DEBUG=false
